<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="place-name"><%= @place.name %></h1>
  <i><%= @place.address %></i><br /><br />
  <p><%= @place.description %></p><br />

  <% if @place.latitude.present? && @place.longitude.present? %>
    <script>
      function initMap() {
        var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 14,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDYNBAdUJqza_2Wjo1wH65BqlAyrSv52Yo&callback=initMap">
    </script>

    <div id="map"></div>
  <% end %>

  <br />

  <% @place.photos.each do |photo| %>
    <div class='photo-column'>
      <%= image_tag photo.picture, class: 'photo' %>
      <br />
      <small><%= photo.caption %></small>
    </div>
  <% end %>

  <br class="clear"/><br />

  <div>
    <% if @place.user.present? %>
      <small>Added by <%= @place.user.email %></small>
    <% end %>
    <div class="float-right">
      <% if current_user && current_user == @place.user %>
        <!-- Button trigger modal for uploading a photo -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#uploadPhoto">
          Upload a photo
        </button>
        <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-primary' %>
        <%= link_to 'Delete', place_path(@place), method: :delete, data:
        {confirm: 'Are you sure you want to delete this place?'}, class:
        'btn btn-danger' %>
      <% end %>
    </div>
    <br class="clear">
  </div>
</div>

<!-- Modal for adding a comment -->
<div class="modal fade" id="addComment" tabindex="-1" role="dialog" aria-labelledby="addCommentLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addCommentLabel">Add a comment</h5>
        <button type="button" class="close" data-dismiss="modal"
        aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary"
          data-dismiss="modal">Close</button>
          <%= f.submit 'Add Comment', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal for uploading a photo -->
<div class="modal fade" id="uploadPhoto" tabindex="-1" role="dialog" aria-labelledby="uploadPhotoLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="uploadPhotoLabel">Add a comment</h5>
        <button type="button" class="close" data-dismiss="modal"
        aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= simple_form_for @photo, url: place_photos_path(@place) do |f| %>
        <div class="modal-body">
            <%= f.input :picture %>
            <%= f.input :caption %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary"
          data-dismiss="modal">Close</button>
          <%= f.submit 'Add Photo', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="col-10 offset-1">
  <h1 class="float-left">Comments</h1>
  <!-- Button trigger modal for adding a comment -->
  <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#addComment">
    Add a comment
  </button>
</div>

<div class="clear"></div>

<div class="row col-10 offset-1">
  <% @place.comments.each do |comment| %>
    <div class="col-12 col-sm-6">
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %>
        <br />
        <small>â€” <%= comment.user.email %></small>
      </blockquote>
    </div>
  <% end %>
</div>
